{{!< default}}

<!-- Start Header -->
<header class="noo-header">
    {{> "header"}}
</header>
<!-- End Header -->
{{#post}}

<header class="noo-page-heading heading-bg-image">
	<div class="container-boxed max">
		<div class="page-heading-info ">
			<h1 class="page-title"><span class="nth-word-first">Contact</span> us</h1>
	  	</div>
		<!-- Start breadcrumbs -->
			{{> "breadcrumbs"}}
		<!-- End breadcrumbs -->
	</div> 
</header>

<div class="main-content container-fullwidth">
	<div class="row">
		<div class="noo-main col-md-12"> 
			<div class="container-boxed max">
				<div class="row contact-form-section">
					<div class="text-left col-md-5 col-sm-6 ">						
						{{#if image}} <img width="600" height="450" src="{{image}}" class="img-thumbnail" /> {{else}} <img src="{{asset "images/page-3.png"}}" alt="contact_page_img" class="img-thumbnail" /> {{/if}}
						<hr class="noo-gap noo-gap-30">
					</div>
					<div class="text-left col-md-7 col-sm-6">
						<div class="text-block">
							<h3>Send message for us</h3>
						</div>
						<div class="alert alert-success hidden" role="alert">
							<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
							Thank you for contacting us we will get back to you shortly
						</div>
						<div class="contact-form-wrapper">
							{{> "contactus"}}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div> 
</div>
{{/post}}